<div class="container" style="margin: 100px auto;">
    <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
        <h4>Modificar la novedad NÂ° {{novedad.id}}</h4>

            <input type="hidden" value="{{novedad.id}}" name="id">

        <div class="mb-3">
            <label for="titulo" class="form-label">Titulo</label>
            <input type="text" class="form-control" value="{{novedad.titulo}}" placeholder="Titulo" name="titulo" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="descripciones" class="form-label">Descripciones</label>
            <input type="text" value="{{novedad.dato1}}" class="form-control" placeholder="Dato 1" name="dato1">
            <input type="text" value="{{novedad.dato2}}" class="form-control" placeholder="Dato 2" name="dato2">
            <input type="text" value="{{novedad.dato3}}" class="form-control" placeholder="Dato 3" name="dato3">
            <input type="text" value="{{novedad.dato4}}" class="form-control" placeholder="Dato 4" name="dato4">
        </div>
        <div class="mb-3">
            <label for="precio" class="form-label">Precio</label>
            <input type="text" value="{{novedad.precio}}" class="form-control" placeholder="$" name="precio" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <p>
                <label for="fromFile" class="form-label">Imagen</label>
            <input type="file" name="imagen" id="imagen">
            </p>
            <p>
                <label><input type="checkbox" name="img_delete" id="img_delete" value="1">
                Eliminar imagen actual</label>
                <input type="hidden" name="img_original" value="{{novedad.img_id}}">
            </p>
        <button type="submit" class="btn btn-primary">Modificar</button>
    </form>

    {{#if error}}
    <p>No se pudo modificar la novedad</p>
    {{/if}}
</div>